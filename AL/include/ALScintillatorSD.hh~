#ifndef ALScintillatorSD_h
#define ALScintillatorSD_h 1

#include "G4VSensitiveDetector.hh"

#include "ALScintillatorHit.hh"

#include <vector>

class G4Step;
class G4HCofThisEvent;

class ALScintillatorSD : public G4VSensitiveDetector
{
  public:
    ALScintillatorSD(const G4String& name,
                     const G4String& hitsCollectionName,
                     G4int nofCells);
    virtual ~ALScintillatorSD();

    // methods from base class                                                  
    virtual void   Initialize(G4HCofThisEvent* hitCollection);
    virtual G4bool ProcessHits(G4Step* step, G4TouchableHistory* history);
    virtual void   EndOfEvent(G4HCofThisEvent* hitCollection);

  private:
    ALScintillatorHitsCollection* fHitsCollection;
    G4int  fNofCells;
};
#endif
